<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C4DE8C"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic4">

    </ImageView>

    <TextView
        android:layout_width="389dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/quicksand_bold"
        android:gravity="center"
        android:text="Nhập mã xác nhận gửi đến email của bạn."
        android:textColor="@color/black"
        android:textSize="24dp">

    </TextView>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/etnum1"
        android:fontFamily="@font/quicksand_bold"
        android:background="@drawable/ic18"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:textSize="50dp"
        android:gravity="center"
        android:ems="10"
        android:inputType="textPersonName" />
    <EditText
        android:id="@+id/etnum2"
        android:fontFamily="@font/quicksand_bold"
        android:background="@drawable/ic18"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:textSize="50dp"
        android:gravity="center"
        android:ems="10"
        android:inputType="textPersonName" />
    <EditText
        android:id="@+id/etnum3"
        android:fontFamily="@font/quicksand_bold"
        android:background="@drawable/ic18"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:textSize="50dp"
        android:gravity="center"
        android:ems="10"
        android:inputType="textPersonName" />
    <EditText
        android:id="@+id/etnum4"
        android:fontFamily="@font/quicksand_bold"
        android:background="@drawable/ic18"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:textSize="50dp"
        android:gravity="center"
        android:ems="10"
        android:inputType="textPersonName" />

</LinearLayout>


    <TextView
        android:layout_width="487dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/quicksand_bold"
        android:gravity="center"
        android:text="Không nhận được mã xác nhận."
        android:textColor="@color/black"
        android:textSize="24dp">
    </TextView>
    <Button
        android:id="@+id/btnDN"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/login_btn"
        android:fontFamily="@font/quicksand_bold"
        android:text="Xác minh"
        android:textAllCaps="false"
        android:textSize="25dp" />
</LinearLayout>