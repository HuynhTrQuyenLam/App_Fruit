<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C4DE8C"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:src="@drawable/lg1"></ImageView>

    <TextView
        android:id="@+id/tvChaoMung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:fontFamily="@font/quicksand_bold"
        android:gravity="center"
        android:text="Chào mừng bạn đến với VITIHOLA!"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/login_btn"
        android:drawableLeft="@drawable/user"
        android:drawablePadding="10dp"
        android:fontFamily="@font/quicksand_bold"
        android:hint="Tên đăng nhập"
        android:padding="10dp"
        android:textColorHint="@color/black"></EditText>

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/login_btn"
        android:drawableLeft="@drawable/baseline_lock_24"
        android:drawablePadding="10dp"
        android:fontFamily="@font/quicksand_bold"
        android:hint="Mật khẩu"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColorHint="@color/black">

    </EditText>

    <TextView
        android:id="@+id/tvForgotPassword"
        android:layout_width="161dp"
        android:layout_height="34dp"
        android:layout_gravity="right"
        android:fontFamily="@font/quicksand_bold"
        android:paddingTop="10dp"
        android:text="Quên mật khẩu?"
        android:textColor="@color/black"
        android:textSize="18dp" />
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_btn"
        android:fontFamily="@font/quicksand_bold"
        android:text="Đăng nhập"
        android:textAllCaps="false"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/tvNoAccount"
            android:layout_width="250dp"
            android:layout_height="38dp"
            android:layout_marginTop="50dp"
            android:layout_marginStart="35dp"
            android:fontFamily="@font/quicksand_medium"
            android:gravity="center"
            android:text="Bạn không có tài khoản?"
            android:textColor="@color/black"
            android:textSize="18dp">

        </TextView>

        <Button
            android:id="@+id/btnRe"
            android:layout_width="100dp"
            android:layout_height="38dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/login_btn"
            android:fontFamily="@font/quicksand_bold"
            android:text="Đăng Ký"
            android:textAllCaps="false"
            android:textSize="18dp"
            tools:ignore="TouchTargetSizeCheck">

        </Button>
    </LinearLayout>
</LinearLayout>