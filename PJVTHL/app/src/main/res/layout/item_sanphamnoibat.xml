<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="22dp"
    android:layout_margin="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/xanhnhat"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_sanpham"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:scaleType="center"
                android:src="@drawable/cachua2" />

            <TextView
                android:id="@+id/title_sanpham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Nấm đông trùng"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/price_sanpham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="10dp"
                android:text="25.000 đ"
                android:textColor="@color/red"
                android:textSize="14dp" />
            <ImageButton
                android:id="@+id/btnaddtocart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp"
                android:background="@color/xanhnhat"
                android:backgroundTint="@color/xanhnhat"
                app:srcCompat="@drawable/baseline_add_24" />
        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>